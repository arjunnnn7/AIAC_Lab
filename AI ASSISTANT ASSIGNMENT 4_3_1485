        "#Task 3: Few-Shot Prompting – Name Formatting\n",
        "def format_name(full_name):\n",
        "    parts = full_name.split()\n",
        "    first_name = parts[0]\n",
        "    last_name = parts[-1]\n",
        "    return last_name + \", \" + first_name\n",
        "\n",
        "\n",
        "name = input(\"Enter full name: \")\n",
        "print(format_name(name))"
